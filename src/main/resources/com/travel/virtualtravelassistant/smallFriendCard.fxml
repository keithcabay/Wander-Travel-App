<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="100.0" prefWidth="400.0" style="-fx-background-color: #fff;" styleClass="shadow" stylesheets="@CSS/BoxShadow.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travel.virtualtravelassistant.FriendsList.FriendCardController">
    <center>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin></ImageView>
                <Pane HBox.hgrow="ALWAYS" />
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <children>
                      <Label fx:id="fullName" text="User Name">
                          <font>
                              <Font name="System Bold" size="17.0" />
                          </font>
                  </Label>
                      <Label fx:id="email" text="username@gmail.com">
                          <font>
                              <Font name="System Bold" size="12.0" />
                          </font>
                  </Label>
               </children>
            </VBox>
                <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="inviteButton" mnemonicParsing="false" onAction="#handleInviteButton" styleClass="save-changes-button" stylesheets="@CSS/Button.css" text="Invite" visible="false" />
                <Pane HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </center>
</BorderPane>
