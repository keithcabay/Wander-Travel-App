<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" prefHeight="300.0" prefWidth="1200.0" vbarPolicy="NEVER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.travel.virtualtravelassistant.LargeTripPreviewBannerController">
   <content>
      <Pane minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="1200.0" style="-fx-background-color: #000;" styleClass="shadow" stylesheets="@CSS/BoxShadow.css">
         <children>
            <HBox alignment="CENTER" style="-fx-background-color: #0000;">
               <children>
                  <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="1200.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Label fx:id="titleLabel" alignment="CENTER" layoutX="-1.0" layoutY="-1.0" prefHeight="300.0" prefWidth="1200.0" text="TRIP TO ROME IN MAY" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="56.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </content>
</ScrollPane>
